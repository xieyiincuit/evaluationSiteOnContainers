@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}

<div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">

            <button class="navbar-toggler"
                    type="button"
                    data-mdb-toggle="collapse"
                    data-mdb-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <a asp-action="Index" asp-controller="Home" class="navbar-brand p-0 me-2">
                    <img src="~/icon.png" class="icon-banner" alt="">
                    IdentityServer
                </a>

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">主页</a>
                    </li>
                </ul>

                @if (!string.IsNullOrWhiteSpace(name))
                {
                    <div class="d-flex align-items-center">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                            <li>
                                <img src="@(User.FindFirstValue("avatar") ?? "https://mdbcdn.b-cdn.net/img/new/avatars/2.webp")"
                                 class="rounded-circle"
                                 height="45"
                                 alt="Man"
                                 loading="lazy" />
                            </li>
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown" id="navbarDropdown"
                               aria-expanded="False">
                                    @name<b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-action="Logout" asp-controller="Account">注销</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </nav>
</div>