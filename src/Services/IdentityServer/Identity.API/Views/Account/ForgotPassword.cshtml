@model Zhouxieyi.evaluationSiteOnContainers.Services.Identity.API.ViewModels.Login.ForgotPasswordViewModel

<div>
    <ul class="container">
        <li class="active">密码找回</li>
    </ul>
</div>
<div class="container">
    <form asp-controller="Account" asp-action="ForgotPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <h4>FIND YOU ACCOUNT</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group col-sm-6">
            <label asp-for="Email" class="mb-1"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group col-sm-6">
            <label asp-for="PhoneNumber" class="mb-1"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        @if (Model != null && !string.IsNullOrEmpty(Model.Question))
        {
            <br />
            <div class="form-group col-sm-6">
                <label asp-for="Question" class="mb-1">密保问题</label>
                <select class="form-select" asp-for="Question">
                    <option selected>@Model.Question</option>
                </select>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="Answer" class="mb-1">问题答案</label>
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
        }
        <br /><br />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">&nbsp;确认&nbsp;</button>
        </div>
        <br /><br />
    </form>
</div>