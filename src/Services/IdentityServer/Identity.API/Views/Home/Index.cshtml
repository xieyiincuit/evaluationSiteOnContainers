@using IdentityServer4.Extensions
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}

<div class="container">
    <div class="welcome-block px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">
            <img src="~/icon.jpg">
            <br />
        </h1>
        <h2 class="lead">欢迎来到 IdentityServer</h2>
    </div>

    <div class="card-deck mb-3 text-center">
        @if (!string.IsNullOrWhiteSpace(name))
        {
            <div class="card mb-4 box-shadow">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">持久授权</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title">
                        <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" width="1em" height="1em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 8 8"><path fill="currentColor" d="M4 0C2.9 0 2 .9 2 2v1H1v4h6V3H6V2c0-1.1-.9-2-2-2zm0 1c.56 0 1 .44 1 1v1H3V2c0-.56.44-1 1-1z"/></svg>
                    </h1>
                    <a class="btn btn-lg btn-block btn-primary" href="/Grants">查看</a>
                </div>
            </div>


        }
        else
        {
            <div class="card mb-4 box-shadow">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">登录</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title">
                        <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" width="1em" height="1em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 8 8"><path fill="currentColor" d="M4 0C2.9 0 2 .9 2 2v1H1v4h6V3H6V2c0-1.1-.9-2-2-2zm0 1c.56 0 1 .44 1 1v1H3V2c0-.56.44-1 1-1z"/></svg>
                    </h1>
                    <a class="btn btn-lg btn-block btn-primary" href="Account/Login">登录</a>
                </div>
            </div>
        }

        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">OpenID 发现文档</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" width="1em" height="1em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 8 8"><path fill="currentColor" d="M.34 0A.5.5 0 0 0 0 .5v5a.5.5 0 0 0 .5.5H3v1H2c-.55 0-1 .45-1 1h6c0-.55-.45-1-1-1H5V6h2.5a.5.5 0 0 0 .5-.5v-5a.5.5 0 0 0-.5-.5h-7a.5.5 0 0 0-.09 0a.5.5 0 0 0-.06 0zM1 1h6v4H1V1z"/></svg>
                </h1>
                <a href="/.well-known/openid-configuration" class="btn btn-lg btn-block btn-outline-primary">查看</a>
            </div>
        </div>
    </div>

    <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <div class="row">
            <div class="col-6 col-md">
                IdentityServer4 for evaluationSiteOnContainer
                <small class="d-block mb-3 text-muted">© 2018-2022 Copyright of CUIT Student Zhoushanlin</small>
            </div>
            <div class="col-md-6 text-right">
            </div>
        </div>
    </footer>
</div>